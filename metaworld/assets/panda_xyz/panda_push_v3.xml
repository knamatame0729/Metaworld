<mujoco>
    <!-- Panda Push V3 environment (equivalent to sawyer_push_v3.xml) -->
    <include file="../scene/basic_scene.xml"/>
    <include file="../objects/assets/block_dependencies.xml"/>
    <include file="../objects/assets/panda_dependencies.xml"/>

    <!-- Optimized keyframe: hand at approx [0, 0.6, 0.2], gripper pointing down -->
    <!-- Joint order: joint1-7 (arm), finger_joint1, finger_joint2, object freejoint (pos + quat) -->
    <keyframe>
      <key name="home" qpos="0 -0.3 0 2.0 0 1.8 0 0.04 0.04 0 0.6 0.02 1 0 0 0"/>
    </keyframe>

    <worldbody>
      <include file="../objects/assets/panda.xml"/>

      <body name="obj" pos="0 0.6 0.02">
          <joint name="objjoint" type="free" limited='false' damping="0." armature="0."/>
          <inertial pos="0 0 0" mass=".75" diaginertia="8.80012e-04 8.80012e-04 8.80012e-04"/>
          <geom name="objGeom" type="cylinder" pos="0 0 0" solimp="0.99 0.99 0.01"
                size="0.02 0.02" rgba="1 0 0 1" solref="0.01 1"
                contype="1" conaffinity="1" friction="1 0.1 0.002" condim="4" material="block_wood"
          />
      </body>

      <!-- push goal -->
      <site name="goal" pos="0.1 0.8 0.02" size="0.02" rgba="0 0.8 0 1"/>
    </worldbody>

    <tendon>
        <fixed name="split">
            <joint joint="finger_joint1" coef="0.5"/>
            <joint joint="finger_joint2" coef="0.5"/>
        </fixed>
    </tendon>

    <actuator>
        <general class="panda" name="actuator8" tendon="split" forcerange="-100 100" ctrlrange="0 255"
            gainprm="0.01568627451 0 0" biasprm="0 -100 -10"/>
    </actuator>

    <equality>
        <weld body1="mocap" body2="hand" solref="0.02 1"/>
    </equality>
</mujoco>